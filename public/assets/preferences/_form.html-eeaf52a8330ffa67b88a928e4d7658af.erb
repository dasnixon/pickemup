<input type="hidden" ng-model="preference.id" />

<div class="form-group">
  <label class='col-sm-2 control-label'><strong>Expected salary</strong></label>
  <div class="col-sm-10">
    <div class="input-group">
      <span class="input-group-addon"><i class='fa fa-usd'></i></span>
      <input class='form-control' type="text" ng-model="preference.expected_salary" />
      <span class="input-group-addon">.00</span>
    </div>
    <ul class="list-unstyled">
      <li ng-repeat="error in preference.errors.expected_salary">
        <span class="error_message">{{error}}</span>
      </li>
    </ul>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label'><strong>Availablity After Hire</strong></label>
  <div class="col-sm-10">
    <div class="input-group">
      <input class='form-control' type="text" ng-model="preference.potential_availability" />
      <span class="input-group-addon">week(s)</span>
    </div>
    <ul class="list-unstyled">
      <li ng-repeat="error in preference.errors.potential_availability">
        <span class="error_message">{{error}}</span>
      </li>
    </ul>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label'><strong># Hours per Week</strong></label>
  <div class="col-sm-10">
    <div class="input-group">
      <input class='form-control' type="text" ng-model="preference.work_hours" />
      <span class="input-group-addon">hour(s)</span>
    </div>
    <ul class="list-unstyled">
      <li ng-repeat="error in preference.errors.work_hours">
        <span class="error_message">{{error}}</span>
      </li>
    </ul>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label'></label>
  <div class="col-sm-10">
    <table class="table table-bordered">
      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('valid_us_worker')" ng-class="{active: preference.valid_us_worker}">
          Are you a citizen of the United States of America?
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label'></label>
  <div class="col-sm-10">
    <table class="table table-bordered">
      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('willing_to_relocate')" ng-class="{active: preference.willing_to_relocate}">
          Would you be willing and/or want to relocate?
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label'></label>
  <div class="col-sm-10">
    <table class="table table-bordered">
      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('remote')" ng-class="{active: preference.remote}">
          Would you be willing and/or want to work remotely?
        </td>
