  <label class='col-sm-2 control-label'><strong>Company Sizes</strong></label>
  <div class="col-sm-10">
    <table class="table table-bordered">
      <tr class="preference" ng-repeat="row in preference.company_size">
        <td class="preference-list" ng-click="toggleActiveHash(attributes)" ng-class="{active: attributes.checked}" ng-repeat="attributes in row">
          {{attributes.name}}
