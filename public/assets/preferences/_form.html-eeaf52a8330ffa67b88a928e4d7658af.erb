      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('open_source')" ng-class="{active: preference.open_source}">
          You prefer a company that makes open source contributions?
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="form-group">
  <label class='col-sm-2 control-label' for="title"><strong>Benefits</strong></label>
  <div class="col-sm-10">
    <button type="button" ng-click="selectAllBenefits()" class="btn btn-info">Select All</button>
    <button type="button" ng-click="unselectAllBenefits()" class="btn btn-info">Unselect All</button>
    <br />
    <br />
    <table class="table table-bordered">
      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('vacation_days')" ng-class="{active: preference.vacation_days}">
          Paid vacation?
        </td>
        <td class="preference-list" ng-click="toggleActive('healthcare')" ng-class="{active: preference.healthcare}">
          Healthcare?
        </td>
        <td class="preference-list" ng-click="toggleActive('dental')" ng-class="{active: preference.dental}">
          Dental?
        </td>
        <td class="preference-list" ng-click="toggleActive('vision')" ng-class="{active: preference.vision}">
          Vision?
        </td>
      </tr>
      <tr class='preference'>
        <td class="preference-list" ng-click="toggleActive('life_insurance')" ng-class="{active: preference.life_insurance}">
          Life Insurance?
        </td>
        <td class="preference-list" ng-click="toggleActive('equity')" ng-class="{active: preference.equity}">
          Equity?
        </td>
        <td class="preference-list" ng-click="toggleActive('bonuses')" ng-class="{active: preference.bonuses}">
          Bonuses?
        </td>
        <td class="preference-list" ng-click="toggleActive('retirement')" ng-class="{active: preference.retirement}">
          Retirement?
        </td>
      </tr>
    </table>
  </div>
</div>

