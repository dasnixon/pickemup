%p
  %i.fa.fa-gear.fa-2x
    Preferences
  %p
    = user_bio(@user, @preference)
  %ul.list-group
    %li.list-group-item
      %h4.list-gorup-item-heading Preferred Skills
      .list-group-item-text
        #{@preference.skills.join(', ')}
    %li.list-group-item
      %h4.list-gorup-item-heading Preferred Practices
      .list-group-item-text
        #{@preference.practices.join(', ')}
    %li.list-group-item
      %h4.list-gorup-item-heading Preferred Perks
      .list-group-item-text
        #{@preference.perks.join(', ')}
    %li.list-group-item
      %h4.list-gorup-item-heading Preferred Benefits
      .list-group-item-text
        = user_benefits(@preference)
