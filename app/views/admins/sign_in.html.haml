#sign_in1
  .container
    .row
      .col-md-12.header
        %h4 Log in to your account
        %h4 Admin
        = form_tag admin_log_in_path, action: :create, method: :post do |f|
          .row.row-spacing
            .col-xs-6
              = text_field_tag :email, nil, placeholder: 'Email', class: 'form-control'
            .col-xs-6
              = password_field_tag :password, nil, placeholder: 'Password', class: 'form-control'
          .row
            .col-md-12
              = submit_tag "SIGN IN", {class: 'btn btn-theme form-control'}
