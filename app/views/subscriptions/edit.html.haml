#housing
  .container
    .section_header
      %h3 Edit Subscription
      = link_to "Change Card", edit_card_company_subscription_path(company_id: @company.id, :id => @subscription.id), class: 'btn btn-info pull-right'
      %h4 #{"Subscription Status: #{@subscription.active ? 'Active' : 'Inactive'}"}
    = form_for [@company, @subscription], html: { class: 'form-horizontal' } do |f|
      .control-group
        = label_tag 'Subscription Plan:', nil, class: 'control-label'
        .controls
          = select_tag :plan, options_for_select(plans, :selected => @subscription.plan)

      - if @subscription.active
        .control-group
          = label_tag 'Cancel Subscription', nil, class: 'control-label'
          .controls
            = label_tag 'Yes', nil, class: 'radio inline' do
              = radio_button_tag :cancel_subscription, true, false, {'data-toggle' => 'radio'}
              Yes
            = label_tag 'No', nil, class: 'radio inline' do
              = radio_button_tag :cancel_subscription, false, true, {'data-toggle' => 'radio'}
              No
      - else
        .control-group
          = label_tag 'Reactivate Subscription', nil, class: 'control-label'
          .controls
            = label_tag 'Yes', nil, class: 'radio inline' do
              = radio_button_tag :reactivate_subscription, true, true, {'data-toggle' => 'radio'}
              Yes
            = label_tag 'No', nil, class: 'radio inline' do
              = radio_button_tag :reactivate_subscription, false, false, {'data-toggle' => 'radio'}
              No

      = f.submit 'Update Subscription', class: 'btn btn-success'
