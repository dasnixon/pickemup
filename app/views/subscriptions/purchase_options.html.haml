#housing
  .container
    %div{id: "in_pricing"}
      %div{class: "row charts_wrapp"}
        %div{class: "span3 pro"}
          %div{class: "plan"}
            %div{class: "wrapper"}
              %h3 Basic
              %div{class: "price"}
                %span{class: "dollar"} $
                %span{class: "qty"} 250
                %span{class: "month"} /month
              %div{class: "features"}
                %h5 1 Job Listing
              - if company_signed_in?
                = link_to "Select", new_company_subscription_path(company_id: @company.id, clicked_option: 1), class: "order"
              - else
                = link_to "Sign Up", sign_up_path, class: "order"
        %div{class: "span3 pro"}
          %div{class: "plan"}
            %div{class: "wrapper"}
              %h3 Mid-level
              %div{class: "price"}
                %span{class: "dollar"} $
                %span{class: "qty"} 550
                %span{class: "month"} /month
              %div{class: "features"}
                %h5 Up to 5 Job Listings
              - if company_signed_in?
                = link_to "Select", new_company_subscription_path(company_id: @company.id, clicked_option: 2), class: "order"
              - else
                = link_to "Sign Up", sign_up_path, class: "order"
        %div{class: "span3 pro"}
          %div{class: "plan"}
            %div{class: "wrapper"}
              %h3 Enterprise
              %div{class: "price"}
                %span{class: "dollar"} $
                %span{class: "qty"} 750
                %span{class: "month"} /month
              %div{class: "features"}
                %h5 Unlimited Job Listings
              - if company_signed_in?
                = link_to "Select", new_company_subscription_path(company_id: @company.id, clicked_option: 3), class: "order"
              - else
                = link_to "Sign Up", sign_up_path, class: "order"
