- conversation_with = conversation.last_sender
.media
  = link_to image_tag(conversation_with.github_account.profile_image, class: 'media-object img-rounded', size: '100x100'), resume_user_path(id: conversation_with.id), class: 'pull-left'
  .media-body
    .pull-right.media-heading
      - unless @box.eql?('trash')
        %p
          = link_to('Reply', user_conversation_path(user_id: @user.id, id: conversation.id, box: @box), class: 'btn')
          = link_to('Delete', user_conversation_path(user_id: @user.id, id: conversation.id), location: @box, |
                                          box: @box, |
                                          confirm: t('mailboxer.delete_confirm', |
                                          object: conversation.subject), |
                                          method: :delete, class: 'btn') |
        %p
          = t('time.ago', :time => time_ago_in_words(conversation.updated_at))

    %h4.media-heading
      From: #{link_to conversation_with.name, resume_user_path(id: conversation_with.id)}
    %h4.media-heading
      Subject: #{link_to(truncate(conversation.subject, length: 55), user_conversation_path(user_id: @user.id, id: conversation.id, box: @box))}
    .span8.well
      = raw(truncate(strip_tags(conversation.last_message.body), :length => 100))

