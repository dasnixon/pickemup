%div{class: "span3 pro"}
  %div{class: "plan"}
    %div{class: "wrapper"}
      %h3 Basic
      %div{class: "price"}
        %span{class: "dollar"} $
        %span{class: "qty"} 250
        %span{class: "month"} /month
      %div{class: "features"}
        %h5 1 Job Listing
      - if company_signed_in?
        = link_to "Select", new_company_subscription_path(company_id: @company.id, clicked_option: 1), class: "order"
      - else
        = link_to "Sign Up", sign_up_path, class: "order"
