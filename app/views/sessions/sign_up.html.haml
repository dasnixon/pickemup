#sign_up1
  .container
    .row
      .span12.header
        %h4 Sign up for an account
        %h4 Developers
        .span4.social
          = link_to raw("<i class='icon-github-sign icon-5x'></i>"), '/auth/github', class: 'circle github_link'
          = link_to raw("<i class='icon-linkedin-sign icon-5x'></i>"), '/auth/linkedin', class: 'circle github_link'
      .span3.division
        .line.l
        %span or
        .line.r
      .span12.footer
        .form_errors
        %h4 Companies
        = form_tag companies_path, method: :post do |f|
          = text_field_tag 'company[name]', nil, placeholder: 'Company Name'
          = text_field_tag 'company[email]', nil, placeholder: 'Email'
          = password_field_tag 'company[password]', nil, placeholder: 'Password'
          = password_field_tag 'company[password_confirmation]', nil, placeholder: 'Password Confirmation'
          = submit_tag 'Sign Up', {id: 'company_sign_in', class: 'btn btn-info'}
      .span12.proof
        .span5.remember
          %a{:href => "reset.html"} Forgot password?
        .span3.dosnt
          %span Already have an account?
          = link_to 'Sign in', sign_in_path, style: 'text-decoration: none;'
