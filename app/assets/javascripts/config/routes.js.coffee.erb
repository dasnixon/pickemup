userEdit.config(['$stateProvider', '$urlRouterProvider', '$locationProvider', ($stateProvider, $urlRouterProvider, $locationProvider) ->

  $locationProvider.html5Mode(true)

  $stateProvider
    .state "edit",
      url: "/users/:id/edit"
      views:
        "":
          controller: "UsersController"
          templateUrl: "<%= asset_path('users/ang_edit.html.erb') %>"

    .state "user_home",
      url: "/"
      views:
        "":
          controller: "UsersController"
          templateUrl: "<%= asset_path('users/ang_search_jobs.html.erb') %>"

  $urlRouterProvider.otherwise("/")
])

