<div class='media' ng-repeat="listing in job_listings">
  <img class='pull-left media-object img-rounded' style="max-width: 120px; max-height: 120px;" src='{{listing.logo}}'>
  <div class='pull-right'>
    <div class='pull-right'>
      <button class="btn btn-info" onclick="location.href='/companies/{{listing.company_id}}'">
        Learn More About {{listing.name}}
      </button>
      <button class="btn btn-success" onclick="location.href='/users/{{user_id}}/messages/new?job_listing_id={{listing.id}}&receiver={{listing.company_id}}'">
        Send Message
      </button>
    </div>
    <div class="clearfix"></div>
    <dl class='dl-horizontal'>
      <dt>Locations</dt>
      <dd>{{listing.locations.join(', ')}}</dd>
      <dt>Salary</dt>
      <dd>${{listing.salary_range_low}} - ${{listing.salary_range_high}}</dd>
      <dt>Languages</dt>
      <dd>{{listing.acceptable_languages.join(', ')}}</dd>
    </dl>
  </div>
  <div class='media-body'>
    <h4 class='media-heading'>
      <div class='label label-success'; style='font-size: 20px;'>{{listing.score}}% Match</div>
      {{listing.job_title}}
    </h4>
    <div ng-bind-html-unsafe="listing.job_description"></div>
  </div>
</div>
<hr/>
