<div ng-show="success.length > 0" class="alert alert-success">
  {{success}}
</div>
<div ng-show="error_updating.length > 0" class="alert alert-info">
  {{error_updating}}
</div>
<div class='control-group'>
  <label class='control-label'>Job Title*</label>
  <div class='controls'>
    <input id="job_listing_job_title" name="job_title" ng-model="data.job_title" type="text" required \> <span class='client-error', ng-show = 'jobListingForm.job_title.$invalid'></span>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Job Description*</label>
  <div class='controls'>
    <span class='client-error', ng-show = 'jobListingForm.job_description.$invalid'></span>
    <textarea id="job_listing_job_description" ck-editor name="job_description" ng-model="data.job_description"></textarea>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Location*</label>
  <div class='controls'>
    <input id="job_listing_location" name="location" ng-model="data.location" type="text" required \></input> <span class='client-error', ng-show = 'jobListingForm.location.$invalid'></span>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Full-time?</label>
  <div class='controls'>
    <input type="checkbox" ng-model="data.fulltime"\>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Remote work acceptable?</label>
  <div class='controls'>
    <input type="checkbox" ng-model="data.remote"\>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Position Type</label>
  <div class='controls'>
    <table class='table table-bordered'>
      <tr ng-repeat="row in data.position_type">
        <td ng-repeat="type in row">
          <label class='checkbox'>
            <input type="checkbox" ng-model="type.checked"/>{{type.name}}
          </label>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Experience Level</label>
  <div class='controls'>
    <table class='table table-bordered'>
      <tr ng-repeat="row in data.experience_level">
        <td ng-repeat="level in row">
          <label class='checkbox'>
            <input type="checkbox" ng-model="level.checked"/>{{level.name}}
          </label>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Estimated Hours per Week*</label>
  <div class='controls'>
    <input id="job_listing_estimated_work_hours" name="estimate_work_hours" ng-model="data.estimated_work_hours" required="required" type="text"></input>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Approximate Start Time</label>
  <div class='controls'>
    <input id="job_listing_hiring_time" name="hiring_time" ng-model="data.hiring_time" required="required" type="text"></input>
