  <div class='controls'>
    <input id="job_listing_vacation_days" name="vacation_days" ng-model="data.vacation_days" required="required" type="text"/>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Equity</label>
  <div class='controls'>
    <select id="job_listing_equity" name="equity", ng-model="data.equity">
      <option value="None">None</option>
      <option value="Less than 1%">Less than 1%</option>
      <option value="1% - 5%">1% - 5%</option>
      <option value="Greater than 5%">Greater than 5%</option>
    </select>
  </div>
</div>

<div class='control-group'>
  <label class='control-label'>Bonus</label>
  <div class='controls'>
    <select id="job_listing_bonuses" name="bonuses", ng-model="data.bonuses">
      <option value="None">None</option>
      <option value="1-10% of base salary">1-10% of base salary</option>
      <option value="Greater than 10% of base salary">Greater than 10% of base salary</option>
      <option value="Something else">Something else</option>
    </select>
  </div>
</div>

