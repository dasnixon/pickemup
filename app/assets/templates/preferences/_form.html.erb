<input type="hidden" ng-model="preference.id" />

<div class="control-group">
  <label class='control-label'><strong>Expected salary</strong></label>
  <div class="controls">
    <div class="input-prepend input-append">
      <span class="add-on"><i class='icon-usd'></i></span>
      <input type="text" ng-model="preference.expected_salary" />
      <span class="add-on">.00</span>
    </div>
    <ul class="unstyled">
      <li ng-repeat="error in preference.errors.expected_salary">
        <span class="error_message">{{error}}</span>
      </li>
    </ul>
  </div>
</div>

<div class="control-group">
  <label class='control-label'><strong>Availablity After Hire</strong></label>
  <div class="controls">
    <div class="input-append">
      <input type="text" ng-model="preference.potential_availability" />
      <span class="add-on">week(s)</span>
    </div>
    <ul class="unstyled">
      <li ng-repeat="error in preference.errors.potential_availability">
        <span class="error_message">{{error}}</span>
      </li>
    </ul>
  </div>
</div>

<div class="control-group">
  <label class='control-label'><strong># Hours per Week</strong></label>
  <div class="controls">
    <div class="input-append">
      <input type="text" ng-model="preference.work_hours" />
      <span class="add-on">hour(s)</span>
    </div>
    <ul class="unstyled">
      <li ng-repeat="error in preference.errors.work_hours">
        <span class="error_message">{{error}}</span>
