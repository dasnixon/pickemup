      <input type="checkbox" ng-model="preference.fulltime"/>
    </label>
  </div>
</div>

<div class="control-group">
  <label class='control-label'><strong>Open Source Contributions?</strong></label>
  <div class="controls">
    <label class="checkbox">
      <input type="checkbox" ng-model="preference.open_source"/>
    </label>
  </div>
</div>

<div class="control-group">
  <label class='control-label' for="title"><strong>Benefits</strong></label>
  <div class="controls">
    <button type="button" ng-click="selectAllBenefits()" class="btn btn-info">Select All</button>
    <button type="button" ng-click="unselectAllBenefits()" class="btn btn-info">Unselect All</button>
    <br />
    <br />
    <table class="table table-bordered">
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.vacation_days">Paid vacation?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.vacation_days">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.healthcare">Healthcare?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.healthcare">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.dental">Dental?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.dental">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.vision">Vision?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.vision">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
      </tr>
      <tr>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.life_insurance">Life Insurance?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.life_insurance">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.equity">Equity?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.equity">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.bonuses">Bonuses?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.bonuses">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
        <td>
          <label class="checkbox">
            <input type="checkbox" ng-model="preference.retirement">Retirement?
          </label>
          <ul class="unstyled">
            <li ng-repeat="error in preference.errors.retirement">
              <span class="error_message">{{error}}</span>
            </li>
          </ul>
        </td>
      </tr>
    </table>
  </div>
</div>

